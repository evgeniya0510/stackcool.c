#include <stdio.h>
#include <stdint.h>
#include <malloc.h>
typedef unsigned int unit32_t;
unit32_t *mas_1;
int i = 0;
int k,n,m,d;
int bubble (void)
{
 for (m = 0 ;m < n; m++)
	{
 for(i = 0;i < n; i++)
		{
 if (mas_1[i] > mas_1[i+1])
			{
 k = mas_1[i];
 mas_1[i] = mas_1[i+1];
 mas_1[i+1] = k;
			}
		}
	}
 return 0;
}


unit32_t *mas_2;
int shell(unit32_t *A, int N)
{
 int p,j,k;
 int t;
 for(k = N/2; k > 0; k /=2)
 for(p = k; p < N; p++)
	{
 t = A[p];
 for(j = p; j>=k; j-=k)
	{
 if(t < A[j-k])
 A[j] = A[j-k];
 else
 break;
	}
 A[j] = t;
	}
}

unit32_t *mas_3;
void Fast(int arr[], int first, int last)
{
 int i = first, j = last, x = arr[(first + last) / 2];

 do
	{
 while (arr[i] < x)
		{
 i++;
		}
 while (arr[j] > x)
		{
 j--;
		}

 if(i <= j)
		{
 if (i < j)
 Swap(&arr[i], &arr[j]);
 i++;
 j--;
		}
	}
 while (i <= j);

 if (i < last)
	{
 Fast(arr, i, last);
	}
 if (first < j)
	{
 Fast(arr, first,j);
	}
}
 

int main()
{
 printf("Vvedite razmer massiva dlya sortirovki bubble: ");
 scanf_s("%i", &n);
 mas_1 = (unit32_t*) malloc(n*sizeof(unit32_t));

 for(i = 0; i < n; i++)
    {
 printf("mas_1[%d] = ", i);
 scanf_s("%i", &mas_1[i]);
    }
 printf("Massiv do sortirovki \n");
 for (i = 0; i < n; i++)
	{
 printf("%i ", mas_1[i]);
		
	}
 printf("\n");
	
	
 bubble();

 printf("Massiv posle sortirovki \n");
 for (i = 0; i < n; i++)
	{
 printf("%i ", mas_1[i]);
		
	}
 printf("\n=================================\n");


 printf("Vvedite razmer massiva dlya sortirovki shell: ");
 scanf_s("%i", &n);
 mas_2 = (unit32_t*) malloc(n*sizeof(unit32_t));

 for(i = 0; i < n; i++)
    {
 printf("mas_2[%d] = ", i);
 scanf_s("%i", &mas_2[i]);
    }
 printf("Massiv do sortirovki \n");
 for (i = 0; i < n; i++)
	{
 printf("%i ", mas_2[i]);
		
	}
 printf("\n");

 shell(mas_2, n);

 printf("Massiv posle sortirovki \n");
 for (i = 0; i < n; i++)
	{
 printf("%i ", mas_2[i]);
		
	}
 printf("\n=================================\n");



 printf("Vvedite razmer massiva dlya sortirovki Fast: ");
 scanf_s("%i", &n);
 mas_3 = (unit32_t*) malloc(n*sizeof(unit32_t));

 for(i = 0; i < n; i++)
    {
 printf("mas_3[%d] = ", i);
 scanf_s("%i", &mas_3[i]);
    }
 printf("Massiv do sortirovki \n");
 for (i = 0; i < n; i++)
	{
 printf("%i ", mas_3[i]);
		
	}
 printf("\n");

 Fast();


	
 printf("Massiv posle sortirovki \n");
 for (i = 0; i < n; i++)
	{
 printf("%i ", mas_3[i]);
		
	}
 printf("\n=================================\n");
	
 return 0;
}
